	dct:subject	# DBPediaLookup

	form:p------------------------PAIRs------------------------ # TODO separator 
	# av:inspiredBy
	# av:compatibleWith
	av:ideaCategory
	av:project	# P
	av:supportedBy	# A
	av:idea		# I
	av:resource	# R
