# specifications de formulaires pour AV

<projectForm>
  form:classDomain av:Project ;
  #############################
  form:showProperties (
	rdfs:label rdfs:comment
	foaf:homepage
	av:projectCategory
	# foaf:maker
	foaf:mbox
	# foaf:depiction

	form:p------------------------PAIRs------------------------ # TODO separator 
	form:p---Projet-----
	av:similarTo # probably use SKOS
	av:usedBy # inverse : uses
	# av:isComplementOf

	form:a---Acteur_Individu-----
	av:supportedBy	# soutenu ( inverse de likesXXX ) aussi pour Organisation
	foaf:member # a pour contributeur - subPropertyOf supportedBy
	av:targetUser
	
	form:a---Acteur_Organisation-----
	av:supportedBy	# soutenu ( inverse de likesXXX ) aussi pour Organisation
	foaf:member # a pour contributeur - subPropertyOf supportedBy
	av:targetUser
	foaf:fundedBy
	
	form:i---Idée----
	av:implements # met en oeuvre
	av:inspiredBy
	av:opposedTo
	
	form:r---Resource----
	# av:needsResource
	# av:provides # fournit, met à disposition
	form:r------Ressource_biens-espaces-----
	av:sharesGoodOrSpace	# offre, partage
	av:needsGoodOrSpace	# recherche, demande
	form:r------Ressource_services-compétences-----
	av:sharesServices 	# offre
	av:needsServices	# recherche, demande
	cco:expertise	# R DBPediaLookup
	form:r------Ressource_documentaires-----
	av:sharesDocument  	# URL, offre/partage document ou bonne pratique
	av:needsDocument 	# DBPediaLookup recherche, demande
) .
<projectForm-dc_subject>
	:fieldAppliesToForm <projectForm> ;
	:fieldAppliesToProperty dct:subject ;
	:widgetClass form:DBPediaLookup .

<OrganizationForm>
  form:classDomain av:Organization ;
  ################################ (acteur)
  form:showProperties (
	rdfs:label rdfs:comment
	foaf:homepage
	# foaf:maker
	foaf:mbox

	form:p------------------PAIRs---------------- # TODO separator 
	form:p---Projet-----
	av:likesProject
	av:contributes	# P subPropertyOf likesProject
	av:originator   # est à l'origine

	form:a---Acteur_Individu-----
	av:isLikedBy # sympatisant
	av:hasContributor
	av:hasEmployee # subPropertyOf hasContributor 

	form:a---Acteur_Organisation-----
	av:likesOrganization
	av:partner	# owlSymmmetricProperty
	foaf:fundedBy	# intransitive !
	# av:hasCustomer

	form:i---Idée----
	av:likesIdea		# I
	av:specializedIn
	av:opposedTo

# NOTES: collé depuis personne; bien ou espace est plus pertinent pour organisation que pour personne
	form:r------Ressource_biens-espaces-----
	av:sharesGoodOrSpace	# offre, partage
	av:needsGoodOrSpace	# recherche, demande
	form:r------Ressource_services-compétences-----
	av:sharesServices 	# offre
	av:needsServices	# recherche, demande
	# cco:expertise	# R DBPediaLookup
	form:r------Ressource_documentaires-----
	av:sharesDocument  	# URL offre
	av:needsDocument 	# DBPediaLookup recherche, demande
) .


<OrganizationForm-dc_subject3>
	:fieldAppliesToForm <OrganizationForm> ;
	:fieldAppliesToProperty dct:subject ;
	:widgetClass form:DBPediaLookup .


<personForm>
  form:classDomain av:Person ;
  ##########################
  form:showProperties (

	foaf:givenName foaf:familyName
	rdfs:comment
	foaf:homepage
	foaf:mbox	# literal or resource
	foaf:phone
	vcard:postal-code
	vcard:locality
	av:linkedinId
	av:twitterId
	av:facebookId
	# foaf:img	# resource, multi-valued
	foaf:topic_interest # DBPediaLookup

	form:p--------------------PAIRs------------------ # TODO separator 
	form:p---Projet-----
	av:likesProject
	av:contributes	# P
	av:originator   # est à l'origine

	form:a---Acteur_Individu-----
	foaf:knows	# A (ami, famille)
	av:worksWith	# subPropertyOf
	
	form:a---Acteur_Organisation-----
	av:likesOrganization
	av:contributes	# A (adhère, contribue)
	av:employee	# A VOIR : existe déjà dans un vocab' ?

	form:i---Idée----
	av:likesIdea		# I
	av:specializedIn
	av:opposedTo

	form:r------Ressource_biens-espaces-----
	av:sharesGoodOrSpace	# offre, partage
	av:needsGoodOrSpace	# recherche, demande
	form:r------Ressource_services-compétences-----
	av:sharesServices 	# offre
	av:needsServices	# recherche, demande
	# cco:expertise	# R DBPediaLookup
	form:r------Ressource_documentaire-----
	av:sharesDocument  	# URL offre
	av:needsDocument 	# DBPediaLookup recherche, demande
) .
<personForm-topic_interest>
	:fieldAppliesToForm <personForm> ;
	:fieldAppliesToProperty foaf:topic_interest ;
	:widgetClass form:DBPediaLookup .
<personForm-skill>
	:fieldAppliesToForm <personForm> ;
	:fieldAppliesToProperty cco:expertise ;
	:widgetClass form:DBPediaLookup .

<IdeaForm>
  form:classDomain av:Idea ;
  ########################
  form:showProperties (
	rdfs:label rdfs:comment
	dct:subject	# DBPediaLookup
	av:ideaCategory
	
	form:p------------------------PAIRs------------------------ # TODO separator 
	
	form:p---Projet-----------------
	av:isImplementedBy	# P # inversePropertyOf
	av:opposedTo
	
	form:a---Organization-----------
	av:supportedBy
	av:implementedBy
	av:faughtBy # combattue par 
	
	form:a---Individu---------------
	# NOTE: collé de ci-dessus
	av:supportedBy
	av:implementedBy
	av:faughtBy # combattue par
	
	form:i---Idée-------------------
	av:inspiredBy
	# av:compatibleWith
	skos:related # av:similarTo
	av:opposedTo
	# NOTES: autres relations: généralisation, dépendence: skos:narrower, skos:broader
	
	form:r---Resource---------------
	
				
	av:supportedBy	# A
	av:idea		# I
	av:resource	# R
) .
<IdeaForm-dc_subject2>
	:fieldAppliesToForm <IdeaForm> ;
	:fieldAppliesToProperty dct:subject ;
	:widgetClass form:DBPediaLookup .

<RessourceForm>
  form:classDomain av:Resource ;
  form:showProperties (
	rdfs:label rdfs:comment
	av:resourceCategory
	dct:subject	# DBPediaLookup
	foaf:homepage

	form:p------------------------PAIRs------------------------ # TODO separator 

	form:p---Projet-----------------
	form:a---Organization-----------
	form:a---Individu---------------
	form:i---Idée-------------------
	form:r---Resource---------------
	
	av:project	# P
	av:managedBy	# A
	av:ownedBy	# A
	av:usedBy	# A
	av:idea		# I
	av:resource	# R
) .

<RessourceForm-subject_field>
	:fieldAppliesToForm <RessourceForm> ;
	:fieldAppliesToProperty	dct:subject ;
	:widgetClass form:DBPediaLookup .


